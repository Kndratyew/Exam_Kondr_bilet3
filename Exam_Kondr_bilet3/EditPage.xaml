<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exam_Kondr_bilet3.EditPage">
    <StackLayout>
        <Label Text="ФИО:" />
        <Entry Text="{Binding Name}" />
        <Label Text="Специальность:" />
        <Entry Text="{Binding Spec}" />
        <Label Text="Курс" />
        <Entry Text="{Binding Cource}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveF" />
            <Button Text="Удалить" Clicked="DeleteF" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>